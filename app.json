{
  "expo": {
    "name": "turing",
    "slug": "turing",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#09090b"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "scheme": "turing",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.turing.mobile",
      "backgroundColor": "#09090b",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Profil fotoğrafı ve etkinlik görselleri için kamera erişimi gereklidir.",
        "NSPhotoLibraryUsageDescription": "Profil fotoğrafı ve etkinlik görselleri yüklemek için galeri erişimi gereklidir.",
        "NSLocationWhenInUseUsageDescription": "Yakındaki etkinlikleri ve mekanları göstermek için konum erişimi gereklidir.",
        "NSFaceIDUsageDescription": "Biyometrik kimlik doğrulama için Face ID erişimi gereklidir."
      },
      "associatedDomains": [
        "applinks:app.turing.com"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#09090b"
      },
      "package": "com.turing.mobile",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "app.turing.com",
              "pathPrefix": "/"
            },
            {
              "scheme": "turing"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "owner": "your-expo-username",
    "plugins": [
      "expo-asset",
      "expo-font",
      "expo-splash-screen",
      "expo-image-picker",
      "expo-location",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#7c3aed"
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "organization": "your-sentry-org",
          "project": "turing-mobile",
          "url": "https://sentry.io/"
        }
      ]
    ],
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/your-eas-project-id"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
